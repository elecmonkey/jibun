generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  displayName   String?
  avatarUrl     String?
  passwordHash  String
  role          UserRole @default(GUEST)
  isOwner       Boolean  @default(false)
  isActive      Boolean  @default(true)
  connectId     Int?
  connect       Connect? @relation("ConnectUsers", fields: [connectId], references: [id])
  invitedByConnectId Int?
  invitedByConnect   Connect? @relation("ConnectInvitedUsers", fields: [invitedByConnectId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  moments       Moment[]
  comments      Comment[]
}

model Moment {
  id        Int      @id @default(autoincrement())
  content   String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
  tags      String[] @default([])
  images    String[] @default([])
  favCount  Int      @default(0)
  createdAt DateTime @default(now())
  comments  Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  moment    Moment   @relation(fields: [momentId], references: [id])
  momentId  Int
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
  replyTo   Comment? @relation("CommentReplies", fields: [replyToId], references: [id])
  replyToId Int?
  replies   Comment[] @relation("CommentReplies")
  createdAt DateTime @default(now())
}

model Connect {
  id           Int      @id @default(autoincrement())
  connectUrl   String   @unique
  instanceType String   @default("UNKNOWN")
  inviteToken  String?
  inviteExpiresAt DateTime?
  invitedUsers User[]   @relation("ConnectInvitedUsers")
  users        User[]   @relation("ConnectUsers")
  createdAt    DateTime @default(now())
}

model InboundConnect {
  id           Int      @id @default(autoincrement())
  serverName   String
  serverUrl    String   @unique
  serverLogo   String
  sysUsername  String
  tokenHint    String?
  verifiedAt   DateTime?
  createdAt    DateTime @default(now())
}

model SystemSetting {
  id         Int    @id @default(1)
  serverName String
  serverUrl  String
  serverLogo String
  sysUsername String
}

enum UserRole {
  ADMIN
  POSTER
  GUEST
}
